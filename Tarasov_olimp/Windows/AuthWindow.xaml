<Window x:Class="Tarasov_olimp.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarasov_olimp.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="300" Width="300">
    <Grid>
        <UniformGrid Rows="3" Columns="2">
            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Логин:</TextBlock>
            <TextBox Name="tbLogin" Grid.Row="0" Grid.Column="1"></TextBox>
            <TextBlock Grid.Row="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center">Пароль:</TextBlock>
            <TextBox Name="tbPassword" Grid.Row="1" Grid.ColumnSpan="1"></TextBox>
            <Button x:Name="BtnAutor" Click="BtnAutor_Click" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,-150,0">Авторизироваться</Button>
        </UniformGrid>
    </Grid>
</Window>
